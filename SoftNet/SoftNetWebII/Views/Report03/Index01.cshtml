@using Base.Models
@using BaseWeb.Models

<script type="text/javascript">
    $(function () {
        IS_SYS_Clock = false;
        SYS_ClickBlock = false;
        _me.init();
        _crud.onFind2();//進階查詢dislpay=none
    });

    var _me = {
        hasStaionStatus: false,
        hasSimulatioStatus: false,
        STView2Work_PageReload: false,
        hasStaionChangQTY: false,
        init: function () {
            //datatable config  DOCRole
            var config = {
                columns: [
                    { data: '_Fun' },
                    { data: 'LOGDateTime', orderable: true },
                    { data: 'StationNO', orderable: true },
                    { data: 'PP_Name', orderable: true },
                    { data: 'PartNO', orderable: true },
                    { data: 'PartNameSpecification', orderable: true },
                    { data: 'OP_Name', orderable: true },
                    { data: 'OrderNO', orderable: true },
                    { data: 'OKQTY' },
                    { data: 'FailQTY' },
                    { data: 'CycleTime' },
                    { data: 'EfficientCycleTime' },
                ],
                columnDefs: [
                    {
                        targets: [0], render: function (data, type, full, meta) {
                            //return _crud.dtCrudFun(full.Id, full.Name, true, true, false);
                            var tmp = full.LOGDateTime + ';' + full.Id + ';' + full.ServerId + ';' + full.StationNO + ';' + full.OP_NO;
                            return _crud.dtCrudFun(tmp, full.Name, true, true, false);
                        }
                    },
                ],
            };

            //init crud
            _crud.DbKeyName = 'LOGDateTime';
            _crud.DbKeyNameS = ['LOGDateTime', 'Id', 'ServerId', 'StationNO', 'OP_NO'];
            _crud.init(config);
        },


    }; //class
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { "工站報工查詢與維護" } })
<div class="xp-prog">
    <div id="divRead">
        <form id='formRead' class='xg-form'>
            <div class="row">
                @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "工站編號", Fid = "StationNO", Rows = (List<IdStrDto>)ViewBag.StationNOData , InRow = true})
                @await Component.InvokeAsync("XgFindTbar", new XgFindTbarDto { HasReset = true, HasFind2 = true })
            </div>
        </form>

        <form id='formRead2' class='xg-form xg-mb0'>
            <div class="row">
                <div class="col-md-2 xg-label">日期區間</div>
                <div class="col-md-10 xg-input">
                    @await Component.InvokeAsync("XiDate", new XiDateDto { Fid = "DOCDate", InRow = true, IsAutoDate=true,IsAutoDate_MathDay=-30, BoxClass = "xg-inline" })
                    <span>～</span>
                    @await Component.InvokeAsync("XiDate", new XiDateDto { Fid = "DOCDate2", InRow = true, IsAutoDate=true, BoxClass = "xg-inline" })
                </div>
            </div>
            @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "製程名稱", Fid = "PP_Name", Rows = (List<IdStrDto>)ViewBag.PPNameData })
            @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "人員編號", Fid = "OP_NO", Rows = (List<IdStrDto>)ViewBag.OPNOName })
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "工單編號", Fid = "OrderNO", MaxLen = 50 })
        </form>

        <div class='xg-btns-box'>
        </div>
        <table id="tableRead" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
                    <th>維護</th>
                    <th>報工日期</th>
                    <th>工站</th>
                    <th>製程名稱</th>
                    <th>料號</th>
                    <th>品名 規格</th>
                    <th>報工人員</th>
                    <th>工單編號</th>
                    <th>OK量</th>
                    <th>Fail</th>
                    <th>平均CT</th>
                    <th>目標CT</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="xg-hide">
        <form id='eform' class='xg-form' style='margin-bottom:0;'>
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "Id" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "StationNO" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "LOGDateTime" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "OP_NO" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "ServerId" })

            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "OK數量", Fid = "OKQTY", Required = true, MaxLen = 20 })
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "Fail數量", Fid = "FailQTY", Required = true, MaxLen = 20 })
        </form>

        @await Component.InvokeAsync("XgSaveBack")
    </div>
</div>

