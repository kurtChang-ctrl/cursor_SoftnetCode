
<script type="text/javascript">
    $(function () {
        IS_SYS_Clock = false;
        SYS_ClickBlock = false;
        _me.init();
        _crud.onFind2();//進階查詢dislpay=none
    });

    var _me = {
        hasStaionStatus: false,
        hasSimulatioStatus: false,
        STView2Work_PageReload: false,
        hasStaionChangQTY: false,
        init: function () {
            //datatable config
            var config = {
                columns: [
                    { data: '_Fun' },
                    { data: 'FactoryName', orderable: true },
                    { data: 'StoreNO' , orderable: true},
                    { data: 'StoreName' },
                    { data: 'Class', orderable: true },
                    { data: 'Simulation_FirstNO', orderable: true },
                    { data: 'Config_macID' },
                    { data: 'Default_IN_OUT', orderable: true },
                    { data: 'PostNO' },
                    { data: 'Address' },

                ],
                columnDefs: [
                    { targets: [0], render: function (data, type, full, meta) {
                            var tmp = full.ServerId + ';' + full.StoreNO;
                            return _crud.dtCrudFun(tmp, full.Name, true, true, false);
                    }},
                ],
            };

            //init crud
            _me.mCol = new EditMany('Id', 'eformCol', 'tplCol', 'tr');
            _crud.DbKeyName = 'StoreNO';
            _crud.DbKeyNameS = ['ServerId', 'StoreNO'];
            _crud.init(config, [null, _me.mCol]);
        },


    }; //class
</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { "倉庫維護" } })
<div class="xp-prog">
    <!-- read form-->
    <div id="divRead">
        <!-- condition -->
        <form id='formRead' class='xg-form xg-mb0'>
            <div class="row">
                @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "廠別", Fid = "FactoryName", Rows = (List<IdStrDto>)ViewBag.FactoryName , InRow = true})
                @await Component.InvokeAsync("XgFindTbar", new XgFindTbarDto { HasReset = true, HasFind2 = true })
            </div>
        </form>
        <form id='formRead2' class='xg-form'>
            @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "類型", Fid = "Class", Rows = (List<IdStrDto>)ViewBag.Class })
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "庫別", Fid = "StoreNO" })
        </form>

        <div class='xg-btns-box' style="margin-top:5px;">
            @await Component.InvokeAsync("XgCreate")
        </div>

        <!-- result list -->
        <table id="tableRead" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
                    <th width='60px'>維護</th>
                    <th>廠別</th>
                    <th>庫別</th>
                    <th>名稱</th>
                    <th>類型</th>
                    <th>排程優先權重值</th>
                    <th>倉庫電子標籤ID</th>
                    <th>排程適用進出倉定義</th>
                    <th>郵遞區號</th>
                    <th>地址</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <!-- edit form-->
    <div id="divEdit" class="xg-hide">
        <partial name="Edit" />
    </div>
</div>

