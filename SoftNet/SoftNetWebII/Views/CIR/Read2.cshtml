            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "Id" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "StationNO" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "LOGDateTime" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "OP_NO" })
