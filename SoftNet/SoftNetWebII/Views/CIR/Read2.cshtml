        hasSimulatioStatus: false,
        STView2Work_PageReload: false,
        hasStaionChangQTY: false,

        init: function () {
            //datatable config  DOCRole
            var config = {
                columns: [
                    { data: '_Fun' },
                    { data: 'StationNO', orderable: true },
                    { data: 'TOTGrowing', orderable: true },
                    { data: 'TOTSIDTime', orderable: true },
                    { data: 'TOTATime', orderable: true },
                    { data: 'TOTBTime', orderable: true },
