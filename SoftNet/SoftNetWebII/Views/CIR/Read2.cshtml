                    { data: 'C4Time', },
                    { data: 'A4Time', },
                    { data: 'D4Time', },




                ],
                columnDefs: [
                    {
                        targets: [0], render: function (data, type, full, meta) {
                            //return _crud.dtCrudFun(full.Id, full.Name, true, true, false);
                            return _crud.dtCrudFun(full.StationNO, full.Name, false, false, true);
                        }
