@using Base.Models
@using BaseWeb.Models

<script type="text/javascript">
    $(function () {
        IS_SYS_Clock = false;
        if (SYS_ClickBlock) { _fun.unBlock(); }
        SYS_ClickBlock = false;
        _me.init();
    });

    var _me = {
        hasStaionStatus: false,
        hasSimulatioStatus: false,
        STView2Work_PageReload: false,
        hasStaionChangQTY: false,

        init: function () {
            //datatable config  DOCRole
            var config = {
                columns: [
                    { data: 'StationNO',  },
                    { data: 'TOTGrowing',  },
                    { data: 'TOTSIDTime',  },
                    { data: 'TOTATime', },
                    { data: 'TOTBTime', },
                    { data: 'C1Time', },
                    { data: 'D1Time', },
                    { data: 'A1Time', },
                    { data: 'C2Time', },
                    { data: 'D2Time', },
                    { data: 'A2Time', },
                    
                    { data: 'C3Time', },
