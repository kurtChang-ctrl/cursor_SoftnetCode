</script>

@await Component.InvokeAsync("XgProgPath", new { names = new string[] { "以工站角度看效益(4週)查詢" } })
<div class="xp-prog">
    <div id="divRead">
        <form id='formRead' class='xg-form'>
            <div class="row">
                @await Component.InvokeAsync("XiSelect", new XiSelectDto { Title = "工站編號", Fid = "StationNO", Rows = (List<IdStrDto>)ViewBag.StationNOData, InRow = true })
                @await Component.InvokeAsync("XgFindTbar", new XgFindTbarDto { HasReset = true, HasFind2 = false })
            </div>
        </form>

        <div class='xg-btns-box' style="background-color:#ABBAEA;">
            總成長率公式=比較最近4週生產能量(看有效CT進步的實際比率) &nbsp;&nbsp;&nbsp;&nbsp; 總稼動率公式=最近4週&nbsp;平均總稼動率<br />
            總能量率公式=最近4週&nbsp;有效平均CycleTime(排除乖離值)/實際平均CycleTime &nbsp;&nbsp;&nbsp;&nbsp; 最大負荷公式=該站離最大的產能還可提升比率
        </div>
        <div class='xg-btns-box' style="background-color:#dd9158;">
            總成長率=@ViewBag.Dis_totAAA %
        </div>

        <table id="tableRead" class="table table-bordered xg-table" cellspacing="0">
            <thead>
                <tr>
                    <th>工站</th>
                    <th>總成長率</th>
                    <th>總稼動率</th>
                    <th>總能量率</th>
                    <th>最大負荷差</th>
                    <th>前4週成長率</th>
                    <th>前4週稼動率</th>
                    <th>前4生產能量</th>
                    <th>前3週成長率</th>
                    <th>前3週稼動率</th>
                    <th>前3生產能量</th>
                    <th>前2週成長率</th>
                    <th>前2週稼動率</th>
                    <th>前2生產能量</th>
                    <th>前1週成長率</th>
                    <th>前1週稼動率</th>
                    <th>前1生產能量</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <div id="divEdit" class="xg-hide">
        <form id='eform' class='xg-form' style='margin-bottom:0;'>
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "Id" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "StationNO" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "LOGDateTime" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "OP_NO" })
            @await Component.InvokeAsync("XiHide", new XiHideDto { Fid = "ServerId" })

            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "OK數量", Fid = "OKQTY", Required = true, MaxLen = 20 })
            @await Component.InvokeAsync("XiText", new XiTextDto { Title = "Fail數量", Fid = "FailQTY", Required = true, MaxLen = 20 })
        </form>

        @await Component.InvokeAsync("XgSaveBack")
    </div>
</div>

